<!-- app/views/admin/genres/index.html.erb -->
<h1>ジャンル編集画面</h1>
<p>ここではジャンルを追加、編集、削除できます。</p>

<div class="container mt-5">
  <div class="row">
    <% @genres.each do |genre| %>
      <div class="col-md-4 mb-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title"><%= genre.name %></h5>
            <%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-secondary' %>
            <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to '新しいジャンルを追加', new_admin_genre_path, class: 'btn btn-primary mt-3' %>
</div>