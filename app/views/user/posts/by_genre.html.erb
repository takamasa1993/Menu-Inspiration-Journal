<% provide(:title, @genre.name + " の投稿") %>

<div class="container mt-5">
  <h2 class="text-center mb-4"><%= @genre.name %> の投稿</h2>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-2 mb-2">
        <div class="card">
          <% if post.image.attached? %>
            <%= image_tag post.image.variant(resize_to_fit: [300, 200]), class: 'card-img-top' %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= post.menu_title %></h5>
            <p class="card-text">いいねの数: <%= post.likes.count %></p>
            <%= link_to '詳細を見る', post_path(post), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>