<% provide(:title, '新規レシピ投稿') %>

<div class="container mt-5">
  <h2 class="text-center mb-4">新規レシピ投稿</h2>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <%= form_with(model: @post, local: true, html: { enctype: "multipart/form-data" }) do |form| %>
            <% if @post.errors.any? %>
              <div class="alert alert-danger">
                <h4>エラーが発生しました：</h4>
                <ul>
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group row">
              <%= form.label :menu_title, '料理名', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.text_field :menu_title, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :genre_id, 'ジャンル', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.collection_select :genre_id, Genre.all, :id, :name, prompt: 'ジャンルを選択してください', class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :image, '料理の画像', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.file_field :image, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :energy, 'エネルギー (kcal)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :energy, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :protein, 'タンパク質 (g)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :protein, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :fat, '脂質 (g)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :fat, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :calcium, 'カルシウム (mg)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :calcium, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :iron, '鉄 (mg)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :iron, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :zinc, '亜鉛 (mg)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :zinc, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :vitamin_a, 'ビタミンA (μg)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :vitamin_a, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :vitamin_b1, 'ビタミンB1 (mg)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :vitamin_b1, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :vitamin_b2, 'ビタミンB2 (mg)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :vitamin_b2, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :vitamin_c, 'ビタミンC (mg)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :vitamin_c, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :dietary_fiber, '食物繊維 (g)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :dietary_fiber, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :salt, '食塩 (g)', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.number_field :salt, step: 0.1, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :notes, 'その他の情報', class: 'col-sm-3 col-form-label' %>
              <div class="col-sm-9">
                <%= form.text_area :notes, rows: 5, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-12 text-center">
                <%= form.submit '投稿', class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>