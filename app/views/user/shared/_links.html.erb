<%- if controller_name != 'sessions' %>
  <div class="mt-3">
    <%= link_to 'ログイン', new_session_path(resource_name) %>
  </div>
<% end -%>

<%- if controller_name != 'registrations' && devise_mapping.registerable? && !controller_name.eql?('passwords') %>
  <div class="mt-3">
    <%= link_to '新規登録', new_registration_path(resource_name) %>
  </div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <div class="mt-3">
    <%= link_to 'パスワードをお忘れですか？', new_password_path(resource_name) %>
  </div>
<% end -%>